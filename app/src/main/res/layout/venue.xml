<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_venue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#FFFFE8">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/venue_picture"
            android:layout_width="66dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/venue_picture" />

        <TextView
            android:id="@+id/venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/venue_picture"
            android:layout_toStartOf="@+id/number_of_attendees"
            android:text="kikkk"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/venue_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_name"
            android:layout_toEndOf="@+id/venue_picture"
            android:padding="8dp"
            android:text="ssss" />

        <TextView
            android:id="@+id/number_of_attendees"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@+id/going_banner"
            android:text="sldkf"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/going_banner"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venue_name"
            android:layout_marginStart="52dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/venue_rating"
            android:src="@drawable/going_button"
            android:visibility="invisible"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
