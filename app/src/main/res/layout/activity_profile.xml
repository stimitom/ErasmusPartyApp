<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <LinearLayout
        android:id="@+id/linear_layout_city_setup"
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_user_80"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_username"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:text="@string/placeholder"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_chosen_nationality"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:text="@string/placeholder"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_chosen_city"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:text="@string/placeholder"/>

        <Button
            android:id="@+id/edit_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_green_round"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/reset_password_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_green_round"
            android:gravity="center"
            android:text="@string/reset_password_short"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>