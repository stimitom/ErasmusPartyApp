<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutActivity"
    android:padding="16dp"
    android:background="@color/colorPrimaryLight"
    >

    <ImageView
        android:id="@+id/bar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_beer_96" />

    <ImageView
        android:id="@+id/night_club_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/bar_icon"
        app:layout_constraintTop_toBottomOf="@+id/bar_icon"
        app:srcCompat="@drawable/icon_dancing2_96" />

    <ImageView
        android:id="@+id/bar_night_club_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/night_club_icon"
        app:layout_constraintTop_toBottomOf="@+id/night_club_icon"
        app:srcCompat="@drawable/icon_disco2_100" />

    <TextView
        android:id="@+id/bar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/bar"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/bar_icon"
        app:layout_constraintStart_toEndOf="@+id/bar_icon"
        app:layout_constraintTop_toTopOf="@+id/bar_icon" />

    <TextView
        android:id="@+id/night_club_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/night_club"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/night_club_icon"
        app:layout_constraintStart_toEndOf="@+id/night_club_icon"
        app:layout_constraintTop_toTopOf="@+id/night_club_icon" />

    <TextView
        android:id="@+id/bar_night_club_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/bar_night_club"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/bar_night_club_icon"
        app:layout_constraintStart_toEndOf="@+id/bar_night_club_icon"
        app:layout_constraintTop_toTopOf="@+id/bar_night_club_icon" />

    <TextView
        android:id="@+id/icons8_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/icons8"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@+id/bar_night_club_icon"
        app:layout_constraintTop_toBottomOf="@+id/bar_night_club_icon" />

    <TextView
        android:id="@+id/icons8_link_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/icons8_link"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/icons8_tv"
        app:layout_constraintStart_toStartOf="@+id/icons8_tv"
        app:layout_constraintTop_toBottomOf="@+id/icons8_tv" />

    <Button
        android:id="@+id/buy_me_a_coffee_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_green_round"
        android:text="@string/buy_me_a_coffee"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icons8_link_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>


