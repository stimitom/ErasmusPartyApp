<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <TextView
        android:paddingTop="@dimen/activityPadding"
        android:paddingHorizontal="@dimen/activityPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textMedium"
        android:text="@string/donation_gag"
        android:textAlignment="center"/>



    <com.stimitom.erasmuspartyapp.IndicatingView
        android:id="@+id/generated_graphic_about"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activityPadding"
        android:background="@color/colorPrimaryLight"
        />


</LinearLayout>